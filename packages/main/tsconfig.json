{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "references": [{ "path": "../../tsconfig.json" }]
}